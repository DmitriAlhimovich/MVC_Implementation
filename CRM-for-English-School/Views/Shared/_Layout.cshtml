                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="#" class="nav-link px-2 text-secondary">Главная</a></li>
                    <li><a href="#" class="nav-link px-2 text-white">Новости</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-link px-2 text-white" asp-controller="Requests" asp-action="Index">Заявки</li>
                        <li class="nav-link px-2 text-white" asp-controller="Courses" asp-action="Index">Курсы</li>
                        <li class="nav-link px-2 text-white" asp-controller="Groups" asp-action="Index">Группы</li>
                        <li class="nav-link px-2 text-white" asp-controller="Teachers" asp-action="Index">Преподаватели</li>
                        <li class="nav-link px-2 text-white" asp-controller="Students" asp-action="Index">Студенты</li>
                    }
