@model List<StudentModel>
@{ ViewData["Title"] = "Students"; }
<div class="big-pannel">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">StudentID</th>
                <th scope="col">FirstName</th>
                <th scope="col">MiddleName</th>
                <th scope="col">LastName</th>
                <th scope="col">Age</th>
                <th scope="col">Gender</th>
                <th scope="col">CurrentEnglishLevel</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {

<tr>
    <th scope="col">@student.StudentID</th>
    <th scope="col">@student.FirstName</th>
    <th scope="col">@student.MiddleName</th>
    <th scope="col">@student.LastName</th>
    <th scope="col">@student.Age</th>
    <th scope="col">@student.Gender</th>
    <th scope="col">@student.CurrentEnglishLevel</th>
    <th scope="col">
        @Html.ActionLink("Edit", "EditStudent", "EnglishSchool", new { id = student.StudentID }, new { @class = "btn btn-success" })
    @Html.ActionLink("Delete", "DeleteStudent", "EnglishSchool", new { id = student.StudentID }, new { @class = "btn btn-danger" })
</th>
</tr>            }
        </tbody>
    </table>
    @Html.ActionLink("Add new student", "AddStudent", "EnglishSchool", null, new { @class = "btn btn-primary" })
</div>