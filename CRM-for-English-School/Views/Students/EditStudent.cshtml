@model StudentModel
@{
    ViewData["Title"] = "Edit student";
}
<div class="small-pannel">
    <h2>Edit student</h2>
    @using (Html.BeginForm("EditStudent", "Students", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.ID)
        ;
        <div class="form-group">
            <label for="FirstName">FirstName</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required>
        </div>
        <div class="form-group">
            <label for="MiddleName">MiddleName</label>
            <input type="text" class="form-control" id="MiddleName" name="MiddleName" value="@Model.MiddleName" required>
        </div>
        <div class="form-group">
            <label for="LastName">LastName</label>
            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.MiddleName" required>
        </div>
        <div class="form-group">
            <label class="form-check-label" for="Age">Age</label>
            <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" required>
        </div>
        <div class="form-group">
            <label for="Gender">Gender</label>
            <input type="text" class="form-control" id="Gender" name="Gender" value="@Model.Gender" required>
        </div>
        <div class="form-group">
            <label for="CurrentEnglishLevel">CurrentEnglishLevel</label>
            <input type="text" class="form-control" id="CurrentEnglishLevel" name="CurrentEnglishLevel" value="@Model.CurrentEnglishLevel" required>
        </div>


        <button type="submit" class="btn btn-success">Edit student</button>
    }
</div>