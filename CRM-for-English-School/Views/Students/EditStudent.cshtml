@model StudentModel
@using CRM_for_English_School.BLL.Entities;
@{
    ViewData["Title"] = "Edit student / ";
}
<div class="small-pannel">
    <h2>Edit student</h2>
    <br />
    @using (Html.BeginForm("EditStudent", "Students", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)
        ;

        <div>
            @Html.ValidationSummary()
        </div>

        <div class="form-group">
            <label asp-for="FirstName">FirstName</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MiddleName">MiddleName</label>
            <input type="text" class="form-control" id="MiddleName" name="MiddleName" value="@Model.MiddleName" asp-for="MiddleName">
            <span asp-validation-for="MiddleName" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">LastName</label>
            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.MiddleName" asp-for="LastName">
            <span asp-validation-for="LastName" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-check-label" asp-for="Age">Age</label>
            <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" asp-for="Age">
            <span asp-validation-for="Age" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CurrentEnglishLevel">CurrentEnglishLevel</label>
            <input type="text" class="form-control" id="CurrentEnglishLevel" name="CurrentEnglishLevel" value="@Model.CurrentEnglishLevel" asp-for="CurrentEnglishLevel">
            <span asp-validation-for="CurrentEnglishLevel" class="alert-danger"></span>
        </div>


        <button type="submit" class="btn btn-success">Edit student</button>
        @Html.ActionLink("Delete", "DeleteStudent", "Students", new { id = Model.Id }, new { @class = "btn btn-danger" })
    }
</div>

@section Scripts{ @await Html.PartialAsync("_ValidationScriptsPartial.cshtml") }